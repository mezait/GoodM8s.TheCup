@model GoodM8s.Core.ViewModels.DynamicIndexViewModel
@{
    Layout.Title = T("Events").ToString();
}
<fieldset>
    @using (Html.BeginFormAntiForgeryPost())
    {
        @Html.ValidationSummary()
        <div class="manage">@Html.ActionLink(T("Add a new event").ToString(), "Create", new { }, new { @class = "button primaryAction" })</div>
        <table class="items">
            <thead>
                <tr>
                    <th scope="col">@T("Name")
                    </th>
                    <th scope="col">@T("Description")
                    </th>
                    <th scope="col">@T("Actions")
                    </th>
                </tr>
            </thead>
            @foreach (var e in Model.List)
            {
                <tr>
                    <td>@e.Name
                    </td>
                    <td>@e.Description
                    </td>
                    <td>
                        <div>
                            @Html.ActionLink(T("Edit").ToString(), "Edit", new { e.Id }) |
                            @Html.ActionLink(T("Delete").ToString(), "Delete", new { e.Id }, new { itemprop = "RemoveUrl UnsafeUrl" })
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
    @Display(Model.Pager)
</fieldset>
